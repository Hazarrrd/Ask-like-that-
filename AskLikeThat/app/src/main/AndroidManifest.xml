          package="com.example.asklikethat">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.editProfileActivity">
        </activity>
        <activity android:name=".activities.watchingProfilesActivity">
        </activity>
        <activity android:name=".login.RegisterActivity">
        </activity>
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="ca-app-pub-1037581054129545~3594761042"/>

        <activity android:name=".activities.RankingActivity">
        </activity>
        <activity android:name=".activities.EndGameActivity">
        </activity>
        <activity android:name=".activities.SinglePlayerGameActivity">
        </activity>
        <activity android:name=".activities.RapidGameActivity">
        </activity>
        <activity android:name=".activities.MainActivity">
        </activity>
    </application>

</manifest>