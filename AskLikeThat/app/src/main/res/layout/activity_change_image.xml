<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lacoste"
        tools:context=".activities.ChangeImageActivity">
        <ImageView
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp" android:id="@+id/image"/>
        <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            <Button
                    android:text="Set profile photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="photo"
                    android:background="@color/white"
                    android:id="@+id/photoButton" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/button8"/>
            <Button
                    android:text="DEFAULT PICTURE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/button8" android:onClick="defaultPicture"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/photoButton" android:layout_marginTop="8dp"/>
        </android.support.constraint.ConstraintLayout>
</LinearLayout>