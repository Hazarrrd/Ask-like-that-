<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lacoste"
        tools:context=".activities.editProfileActivity">

    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/back" android:onClick="back"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/oldPassword" android:hint="Old password"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/newPassword" android:hint="New password"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/newPasswordConfirm" android:hint="Confirm new password"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <Button
                            android:text="CHANGE"
                            android:layout_width="wrap_content"
                            android:background="@color/white"
                            android:layout_height="wrap_content" android:id="@+id/changePass" android:layout_weight="1"
                            android:onClick="change"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <EditText
                android:inputType="textMultiLine"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:hint="describe your profile" android:id="@+id/editText"
                android:lines="3"
                android:gravity="top|left"
                android:maxLines="8"
                android:scrollbars="vertical"
        />
        <Button
                android:text="Save description"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/save"
                android:background="@color/white"
                android:onClick="save"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp">
            <android.support.constraint.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                <Button
                        android:text="Set profile photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="photo"
                        android:background="@color/white"
                        android:id="@+id/photoButton" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <Button
                        android:text="DEFAULT PICTURE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:id="@+id/button8" android:onClick="defaultPicture"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" android:id="@+id/image"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Multiline input -->


</LinearLayout>