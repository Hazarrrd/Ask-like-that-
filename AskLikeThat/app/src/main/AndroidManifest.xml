<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.asklikethat">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/alt_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/alt_icon_round"
            android:supportsRtl="true"
            android:theme="@style/HiddenTitleTheme">
        <activity android:name=".activities.editProfileActivity"
                  android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".activities.watchingProfilesActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activities.RegisterActivity">
        </activity>
        <activity android:name=".activities.LoginActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="ca-app-pub-1037581054129545~3594761042"/>

        <activity android:name=".activities.OneVsOneGameActivity">
        </activity>
        <activity android:name=".activities.OneVsOneResultActivity">
        </activity>
        <activity android:name=".activities.NewGameActivity">
        </activity>
        <activity android:name=".activities.BrowseGamesActivity">
        </activity>
        <activity android:name=".activities.RankingActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activities.EndGameActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activities.SinglePlayerGameActivity">
        </activity>
        <activity android:name=".activities.RapidGameActivity">
        </activity>
        <activity android:name=".activities.MainActivity"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>